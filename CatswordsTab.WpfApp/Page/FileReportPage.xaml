<UserControl x:Class="CatswordsTab.WpfApp.Page.FileReportPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CatswordsTab.WpfApp.Page"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="0" Grid.Row="0">
            <TextBlock Text="File Report" FontSize="32" FontWeight="Bold" VerticalAlignment="Top"/>
            <Label>Welcome to Catswords Community</Label>
        </StackPanel>

        <ScrollViewer Grid.Row="2" Grid.Column="0">
            <TextBlock x:Name="tbContent"/>
        </ScrollViewer>
    </Grid>
</UserControl>
